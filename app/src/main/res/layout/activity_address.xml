<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_ac__installation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.suleman.finalproject.Address"
    android:orientation="vertical"
    android:background="#DCDCDC">

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFF"
    android:layout_margin="15dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/homess"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/img"/>
            <EditText
                android:layout_toRightOf="@+id/img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:hint="Flat No / House No"
                android:paddingLeft="10dp"
                android:background="@android:color/transparent" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#c0c0c0"/>
           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:padding="15dp"
               >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/apartment"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/apt"/>
            <EditText
                android:layout_toRightOf="@+id/apt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:hint="Apartment / Street Name"
                android:paddingLeft="11dp"
                android:background="@android:color/transparent" />
           </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#c0c0c0"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/location"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:id="@+id/location"/>
            <EditText
                android:layout_toRightOf="@+id/location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:hint="Locality / Area Name"
                android:paddingLeft="10dp"
                android:background="@android:color/transparent" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#c0c0c0"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="CHANDIGARH"
                android:textAlignment="center"
                android:textStyle="bold"
                android:paddingTop="10dp"
                android:layout_weight="0.48"/>
            <View
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:background="#c0c0c0" />
            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.48"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:hint="Pincode"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:background="@android:color/transparent" />
        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>
    
    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#008000"
        android:text="Continue To Book"
        android:textAllCaps="false"
        android:textColor="@color/white"/>
    
    
</LinearLayout>